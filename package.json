{
  "name": "doc-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:user": "cd apps/user-app && npm run dev",
    "dev": "npm run dev:user",
    "build:user": "cd apps/user-app && npm run build",
    "build": "npm run build:user",
    "start:user": "cd apps/user-app && npm run start",
    "start": "npm run start:user",
    "lint": "npm run lint:user",
    "lint:user": "cd apps/user-app && npm run lint",
    "install:all": "npm install && cd apps/user-app && npm install",
    "clean": "rm -rf apps/*/node_modules apps/*/.next apps/*/out",
    "optimize": "npm run clean && npm run install:all"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  }
}
